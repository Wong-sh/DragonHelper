<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/customNewsAdapter"
    android:elevation="30dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp">

    <ImageView
        android:id="@+id/custom_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/background_style"
        android:elevation="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/customNewsAdapter"
        app:layout_constraintLeft_toLeftOf="@+id/customNewsAdapter"
        app:layout_constraintRight_toRightOf="@+id/customNewsAdapter"
        app:layout_constraintTop_toTopOf="@+id/customNewsAdapter"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintWidth_percent="0.97"
        app:layout_constraintHeight_percent="0.95"/>

    <TextView
        android:id="@+id/news_No"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/customNewsAdapter"
        app:layout_constraintLeft_toLeftOf="@+id/customNewsAdapter"
        app:layout_constraintRight_toRightOf="@+id/customNewsAdapter"
        app:layout_constraintTop_toTopOf="@+id/customNewsAdapter"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintWidth_percent="0.1"
        app:layout_constraintDimensionRatio="1:1"/>

    <TextView
        android:id="@+id/news_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@color/black"
        android:gravity="left"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/customNewsAdapter"
        app:layout_constraintLeft_toLeftOf="@+id/customNewsAdapter"
        app:layout_constraintRight_toRightOf="@+id/customNewsAdapter"
        app:layout_constraintTop_toTopOf="@+id/customNewsAdapter"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintVertical_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>