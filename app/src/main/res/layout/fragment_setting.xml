<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D0FF81"
    tools:context="com.example.dragonhelpertext1.Fragment.SettingFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/binding_recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.22"
        app:layout_constraintWidth_percent="0.75"
        app:layout_constraintHeight_percent="0.25" />

    <com.example.dragonhelpertext1.CustomControl.AdaptionSizeTextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="账号绑定"
        android:textSize="32sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.05"
        app:layout_constraintWidth_percent="0.6"
        app:layout_constraintHeight_percent="0.1"/>

    <com.example.dragonhelpertext1.CustomControl.AdaptionSizeTextView
        android:id="@+id/phone_textview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="云控账号："
        android:textSize="21sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:paddingStart="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintVertical_bias="0.52"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintDimensionRatio="5:2"/>

    <EditText
        android:id="@+id/phone_setting"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/exittext_style"
        android:textColor="@color/black"
        android:hint="请输入云控账号"
        android:textColorHint="#8C909A"
        android:letterSpacing="0.05"
        android:paddingStart="10dp"
        android:maxLength="15"
        android:maxLines="1"
        android:inputType="number"
        android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintVertical_bias="0.52"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintDimensionRatio="5:1"/>

    <com.example.dragonhelpertext1.CustomControl.AdaptionSizeTextView
        android:id="@+id/password_textview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="云控密码："
        android:textSize="21sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:paddingStart="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintWidth_percent="0.3"
        app:layout_constraintDimensionRatio="5:2"/>

    <EditText
        android:id="@+id/password_setting"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/exittext_style"
        android:textColor="@color/black"
        android:hint="请输入云控密码"
        android:textColorHint="#8C909A"
        android:letterSpacing="0.05"
        android:paddingStart="10dp"
        android:maxLength="15"
        android:maxLines="1"
        android:inputType="number"
        android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintDimensionRatio="5:1"/>

    <Button
        android:id="@+id/button_bind"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/button_in_style"
        android:text="绑定"
        android:textSize="35sp"
        android:letterSpacing="0.2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.75"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintDimensionRatio="5:1"/>

</androidx.constraintlayout.widget.ConstraintLayout>