<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#34AEFF"
    tools:context=".LoginActivity">

    <com.example.dragonhelpertext1.CustomControl.AdaptionSizeTextView
        android:id="@+id/welcome_textview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="欢迎使用一条龙小助手"
        android:textSize="32sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintHeight_percent="0.17"/>

    <com.example.dragonhelpertext1.CustomControl.AdaptionSizeTextView
        android:id="@+id/phone_textview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="账号："
        android:textSize="21sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:paddingStart="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintDimensionRatio="2:1"/>

    <EditText
        android:id="@+id/phone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/exittext_style"
        android:textColor="@color/black"
        android:hint="请输入手机号码"
        android:textColorHint="#8C909A"
        android:letterSpacing="0.05"
        android:paddingStart="10dp"
        android:maxLength="15"
        android:maxLines="1"
        android:inputType="number"
        android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintDimensionRatio="5:1"/>

    <com.example.dragonhelpertext1.CustomControl.AdaptionSizeTextView
        android:id="@+id/phone_warning_textview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="请输入6位以上的账号"
        android:textSize="15sp"
        android:textColor="@color/red"
        android:gravity="center_vertical"
        android:paddingStart="17dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintVertical_bias="0.45"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintDimensionRatio="5:1"/>

    <com.example.dragonhelpertext1.CustomControl.AdaptionSizeTextView
        android:id="@+id/password_textview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="密码："
        android:textSize="21sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:paddingStart="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintWidth_percent="0.2"
        app:layout_constraintDimensionRatio="2:1"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/exittext_style"
        android:textColor="@color/black"
        android:hint="请输入密码"
        android:textColorHint="#8C909A"
        android:letterSpacing="0.05"
        android:paddingStart="10dp"
        android:maxLength="15"
        android:maxLines="1"
        android:inputType="number"
        android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintDimensionRatio="5:1"/>

    <com.example.dragonhelpertext1.CustomControl.AdaptionSizeTextView
        android:id="@+id/password_warning_textview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="请输入6位以上的密码"
        android:textSize="15sp"
        android:textColor="@color/red"
        android:gravity="center_vertical"
        android:paddingStart="17dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintVertical_bias="0.55"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintDimensionRatio="5:1"/>

    <Button
        android:id="@+id/button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/button_style"
        android:text="登录"
        android:textSize="40sp"
        android:letterSpacing="0.2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_bias="0.63"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintDimensionRatio="5:1"/>

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:button="@color/white"
        android:background="@drawable/checkbox_style"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintVertical_bias="0.85"
        app:layout_constraintWidth_percent="0.05"
        app:layout_constraintDimensionRatio="1:1"/>

    <com.example.dragonhelpertext1.CustomControl.AdaptionSizeTextView
        android:id="@+id/warning_textview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="我已阅读并同意“用户协议”和“隐私政策”"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintVertical_bias="0.92"
        app:layout_constraintWidth_percent="0.7"
        app:layout_constraintDimensionRatio="4:1"/>

</androidx.constraintlayout.widget.ConstraintLayout>